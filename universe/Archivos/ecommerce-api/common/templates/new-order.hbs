<html>

<head>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@400;500;600&display=swap" rel="stylesheet">
  <style type="text/css" media="all" rel="stylesheet">
    * {
      margin: 0;
      padding: 0;
      font-family: IBMPlexSans, sans-serif;
    }

    .opps {
      width: 650px;
      border-radius: 4px;
      box-sizing: border-box;
      margin: 40px auto;
      overflow: hidden;
      border: 1px solid #b0afb5;
      background-color: #fafafa;
    }

    .opps-header {
      background-color: #243b7a;
      color: white;
      height: 168px;
      width: 100%;
    }
  </style>
</head>

<body>
  <div class="opps">
    <div class="opps-header">
      <div>
        <div style="text-align: center; padding-top: 30px; padding-bottom: 10px;">
          <img src="{{checkIconUrl}}" style="width: 81px; height:80px;" width=" 81px;" height="80px;">
        </div>
        <div>
          <h4 style="text-align: center; font-size: 24px; font-weight: 500">¡Gracias por tu compra!</h4>
        </div>
      </div>
    </div>
    <div class="payment-data" style=" font-size: 16px; display:inline-block; width: 100%; margin: 20px 0;">
      <div style=" float: left; width: 45%; margin-left: 80px;">
        <p style="margin-bottom: 0;">Fecha de compra</p>
        <p style="margin-bottom: 20px;">{{order.shoppingDate}}</p>
        <p style="margin-bottom: 0;">Total de compra</p>
        <p>${{order.total}} MXN</p>
      </div>
      <div style="float: left; width: 30%; margin-right: 80px;">
        <p style="margin-bottom: 0;">Método de pago</p>
        <p style="margin-bottom: 20px;">{{order.PaymentMethod.name}}</p>
        <p style="margin-bottom: 0;">Método de envío</p>
        <p>{{order.ShippingMethod.name}}</p>
      </div>
    </div>
    <div class="invoice-number" style="text-align: center; margin-bottom: 30px;">
      <p style="margin-bottom: 0; font-size: 21px;">Folio</p>
      <p style="font-size: 24px; font-weight:500;">{{order.order}}</p>
    </div>
    {{#ifCond order.ShippingMethod.id '===' 4}}
    <div class="delivery-tracking-button" style=" text-align:center; margin-top: 80px; margin-bottom: 80px">
      <a href={{order.ShippingMethod.calzzamovil}} target="_blank" rel="noopener noreferrer"
        style="background-color: #243b7a; padding: 20px; border-radius: 5px; color:white; font-weight: 600; font-size: 18px; text-decoration: none;">
        Seguimiento de entrega
      </a>
    </div>
    {{/ifCond}}
    <div class="address" style="padding: 0 40px;">
      <p style="text-align: center; font-size:21px; font-weight:500; margin-bottom: 10px;">Dirección de entrega</p>
      <p style="margin-bottom: 0; line-height: 1;">{{user.name}}</p>
      <p style="margin-bottom: 0; line-height: 1;">{{order.ShippingAddress.Address.street}}
        #{{order.ShippingAddress.Address.exteriorNumber}} {{order.ShippingAddress.Address.interiorNumber}},
        {{order.ShippingAddress.Address.location}} {{order.ShippingAddress.Address.municipality}},
      </p>
      <p style="margin-bottom: 30px; line-height: 1;">{{order.ShippingAddress.Address.state}}, México,
        {{order.ShippingAddress.Address.zip}}.</p>
    </div>
    <div class="products" style="text-align: center;">
      <p style="text-align: center; font-size: 21px; margin-bottom: 20px;">Tus productos</p>
      {{#each order.OrderDetail}}
      <div class="product-card"
        style="width:100%; padding: 5px 5px; width: 592px; border-radius: 3px; box-shadow: 0 2px 2px 0.1px rgba(180, 180, 180, 0.5); background-color: white; display: inline-block; margin-bottom: 20px;">
        <img src="{{productImage}}" alt="Product Image" width="133px" style="float:left">
        <div style=" width:100%; height: 10%;">
          <p style="text-align:left; margin-bottom: 5px;">{{productDescription}}</p>
          <p style="text-align:left; margin-bottom: 5px; color: #828282; font-size: 16;">Talla: <span
              style="color:#353b48;">{{size}}</span>
          </p>
          <p style="text-align:left; margin-bottom: 5px; color: #828282; font-size: 16;">Cantidad: <span
              style="color:#353b48;">{{quantity}}</span>
          </p>
          <p style="text-align:left;font-size: 18; font: weight 600px;">${{unitPrice}}</p>
        </div>
      </div>
      {{/each}}
    </div>
  </div>


</body>

</html>